#!/bin/bash
#
# Ultimate SSH Key & Tailscale Setup for Batocera
# Version: 8.1 - Key Auth, No Hang-Ups, Persistence Fixes
#

# --- Colors ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

# --- Logging Function ---
log() {
    echo -e "${1}[$(date '+%Y-%m-%d %H:%M:%S')] ${2}${NC}"
}

# --- Configuration ---
TAILSCALE_VERSION="1.80.2"
INSTALL_DIR="/userdata/system/tailscale"

# --- Script Start ---
clear
echo -e "${YELLOW}Tailscale & SSH Key Setup for Batocera${NC}"

# --- Root Check ---
[ "$(id -u)" -ne 0 ] && { log "$RED" "Must be run as root."; exit 1; }

# --- Ensure TUN device exists ---
log "$BLUE" "Ensuring TUN device exists..."
modprobe tun
mkdir -p /dev/net
[ ! -c /dev/net/tun ] && mknod /dev/net/tun c 10 200 && chmod 600 /dev/net/tun

# --- Get Tailscale Auth Key ---
read -rp "Enter your Tailscale auth key: " AUTH_KEY
[[ -z "$AUTH_KEY" ]] && { log "$RED" "ERROR: Auth key is required."; exit 1; }
[[ ! "$AUTH_KEY" =~ ^tskey-auth- ]] && { log "$RED" "ERROR: Invalid auth key format."; exit 1; }

# --- Prompt for Hostname ---
read -rp "Enter a hostname (default: batocera-pi5): " USER_HOSTNAME
HOSTNAME="${USER_HOSTNAME:-batocera-pi5}"

# --- Prompt for Tag ---
read -rp "Enter your Tailscale tag (e.g., tag:ssh-batocera-1): " TAG
[[ -z "$TAG" ]] && { log "$RED" "ERROR: Tag is required."; exit 1; }

log "$GREEN" "‚úÖ Using hostname: $HOSTNAME"
log "$GREEN" "‚úÖ Using Tailscale tag: $TAG"

# --- Detect Local IP ---
LOCAL_IP=$(ip -4 addr show | grep -oE "inet [0-9]+\.[0-9]+\.[0-9]+\.[0-9]+" | awk '{print $2}' | grep -v "127.0.0.1" | head -n 1)
[[ -z "$LOCAL_IP" ]] && { log "$RED" "Could not determine local IP."; LOCAL_IP="<LOCAL_IP>"; } || log "$BLUE" "Detected local IP: $LOCAL_IP"

# --- Setup Directories ---
SSH_DIR="/userdata/system/.ssh"
KEYS_DIR="/userdata/system/tailscale/keys"
mkdir -p "$SSH_DIR" "$KEYS_DIR" /etc/dropbear
chmod 700 "$SSH_DIR" "$KEYS_DIR" /etc/dropbear

# --- Generate SSH Key ---
log "$GREEN" "üîë Generating SSH key..."
dropbearkey -t ed25519 -f "$SSH_DIR/id_dropbear" || { log "$RED" "Key generation failed"; exit 1; }
chmod 600 "$SSH_DIR/id_dropbear"
dropbearkey -y -f "$SSH_DIR/id_dropbear" | grep "^ssh-ed25519" > /etc/dropbear/authorized_keys || { log "$RED" "Failed to extract public key"; exit 1; }
chmod 600 /etc/dropbear/authorized_keys
dropbearconvert dropbear openssh "$SSH_DIR/id_dropbear" "$KEYS_DIR/id_ed25519_batocera" || { log "$RED" "Key conversion failed"; exit 1; }
chmod 600 "$KEYS_DIR/id_ed25519_batocera"

# --- Start Dropbear on Port 2222 ---
log "$BLUE" "Starting Dropbear on port 2222 (key-only)..."
/usr/sbin/dropbear -s -p 2222 -B &

# --- Save Overlay Early ---
log "$BLUE" "Saving overlay to persist SSH config..."
batocera-save-overlay

# --- Install Tailscale ---
mkdir -p "$INSTALL_DIR/bin"
wget -q -O "$INSTALL_DIR/tailscale.tgz" "https://pkgs.tailscale.com/stable/tailscale_${TAILSCALE_VERSION}_arm64.tgz" || { log "$RED" "Tailscale download failed."; exit 1; }
tar -xzf "$INSTALL_DIR/tailscale.tgz" -C "$INSTALL_DIR/bin" --strip-components=1 || { log "$RED" "Tailscale extraction failed."; exit 1; }
rm "$INSTALL_DIR/tailscale.tgz"
chmod +x "$INSTALL_DIR/bin/tailscale" "$INSTALL_DIR/bin/tailscaled"

# --- Start Tailscale ---
log "$BLUE" "Starting Tailscale..."
"$INSTALL_DIR/bin/tailscaled" --state="$INSTALL_DIR/tailscaled.state" --socket="$INSTALL_DIR/tailscaled.sock" &
sleep 5
"$INSTALL_DIR/bin/tailscale" --socket="$INSTALL_DIR/tailscaled.sock" up --authkey="$AUTH_KEY" --hostname="$HOSTNAME" --advertise-tags="$TAG" --ssh

# --- Configure Persistence ---
cat > /userdata/system/custom.sh <<EOF
#!/bin/sh
mkdir -p /dev/net
[ ! -c /dev/net/tun ] && mknod /dev/net/tun c 10 200 && chmod 600 /dev/net/tun

if ! pgrep dropbear > /dev/null; then
    /usr/sbin/dropbear -s -p 22 -B &
fi

if ! pgrep -f "/userdata/system/tailscale/bin/tailscaled" > /dev/null; then
    /userdata/system/tailscale/bin/tailscaled --state=/userdata/system/tailscaled.state --socket=/userdata/system/tailscaled.sock &
    sleep 5
    /userdata/system/tailscale/bin/tailscale --socket=/userdata/system/tailscaled.sock up --hostname="$HOSTNAME" --advertise-tags="$TAG" --ssh --accept-routes
fi
EOF
chmod +x /userdata/system/custom.sh
batocera-save-overlay

# --- Warnings Before Reboot ---
log "$YELLOW" "‚ö†Ô∏è IMPORTANT: Download your SSH key before rebooting!"
log "$CYAN" "Retrieve your SSH key:"
echo -e "${YELLOW}scp root@$LOCAL_IP:/userdata/system/tailscale/keys/id_ed25519_batocera %USERPROFILE%\\.ssh\\id_ed25519${NC}"
log "$YELLOW" "After reboot, connect with:"
echo -e "${YELLOW}ssh -i %USERPROFILE%\\.ssh\\id_ed25519 root@$LOCAL_IP${NC}"
